{% extends 'base.html.twig' %}
{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    <div class="container jumbotron form_login">
<form action="{{ path('login') }}" method="post" >
    <div class="form-group">
        <label>Email</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Email" />
    </div>
    <div class="form-group">
       <label>Contraseña</label>
    <input type="password" id="password" name="_password"  class="form-control" placeholder="Contraseña"/>
    </div>
    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <button type="submit" class="btn btn-success">login</button>
    <input type="hidden" name="_target_path" value="/tickets" />
    <u class="link_registro"><a  href="{{ path('register') }}">Registrarse</a></u>
</form>
    </div>
{% endblock %}