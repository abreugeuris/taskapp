{% extends 'base.html.twig' %}

{% block titulo%} -lista Tickets{% endblock %}

{% block body%}
{#{{ dump(tickets) }}#}
    <div class="container">
    <h3 class="text-left">Mis Asignaciones</h3>
    <div class="pull-right">
        <a href="{{ path('nuevo_ticket') }}" class=" btn btn-primary">Nuevo Ticket </a>
    </div>
    <table class="table">
        <thead class="table tab-content ">
        <tr class="text-primary tab-content">
        <th>#</th>
        <th >Fecha</th>
        <th >Usuario</th>
        <th>Estado </th>
        <th>Acciones</th>
        </tr>
        </thead >
        <tbody class="tab-content text-left">
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.id }}</td>
                <td>{{ ticket.fechaCreado |date('d/m/y')}}</td>
                <td>{{ ticket.usuarioAsignado }}</td>
                <td>{{ ticket.estado }}</td>

            </tr>


            {% endfor %}
        </tbody>

    </table>
    </div>


{% endblock %}